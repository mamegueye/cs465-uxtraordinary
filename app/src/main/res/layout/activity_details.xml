<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<!-- Top Navbar -->
<RelativeLayout
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="#E84A27"> <!-- UIUC Orange -->

    <Button
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_button"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/transparent"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Space Details"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/transparent"
        android:textStyle="bold"
        android:layout_alignParentRight="true"/>
</RelativeLayout>

<!-- Main Content -->
<LinearLayout
    android:id="@+id/content_layout"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    app:layout_constraintTop_toBottomOf="@id/top_bar"
    app:layout_constraintBottom_toTopOf="@id/bottom_bar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/tvBuildingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grainger Library"
        android:textSize="24dp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:padding="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/spaces_siebel_drawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tvBuildingCleanliness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.1/5"
            android:textSize="16dp"
            android:textColor="#333333"
            android:drawableLeft="@drawable/bathroom_icon_drawable"/>

        <TextView
            android:id="@+id/tvBuildingCapacity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" 200"
            android:textSize="16dp"
            android:textColor="#333333"
            android:drawableLeft="@drawable/capacity_icon_drawable" />

        <TextView
            android:id="@+id/tvBuildingHours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Open"
            android:textSize="16dp"
            android:textColor="#008000"
            android:drawableLeft="@drawable/hours_icon_drawable" />

    </LinearLayout>

    <Button
        android:id="@+id/studyHere_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/illini_blue"
        android:text="Study here!"
        android:textSize="16dp"
        android:textStyle="bold"/>
</LinearLayout>

<!-- Bottom Bar -->
<GridLayout
    android:id="@+id/bottom_bar"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:background="@color/illini_orange"
    android:gravity="center"
    android:columnCount="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/back_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_button"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/transparent"
        android:textStyle="bold"
        android:layout_gravity="center"/>
</GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>