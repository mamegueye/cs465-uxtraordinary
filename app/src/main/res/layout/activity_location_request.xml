<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationRequest">

    <!-- Code from 10/20 Lecture -->
    <!-- For the screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Top Navbar -->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@color/black">

            <Button
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_button"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/transparent"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_location_header"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"/>

            <Button
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/home_button"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Prompt for Access to User's Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/location_prompt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_location_prompt"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/allow_while_using_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_while_using"
                android:textStyle="bold"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/allow_once_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_once"
                android:textStyle="bold"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/dont_allow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dont_allow"
                android:textStyle="bold"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- /////////////////////////////////////// -->
        <!-- //////// Bottom Navigation Bar //////// -->
        <!-- ///////////////////////////////////////-->
        <GridLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:columnCount="2"
            android:background="@color/black">

            <Button
                android:id="@+id/back_button_location_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_button"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/transparent"
                android:textStyle="bold"
                android:layout_columnWeight="1"/>

        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>