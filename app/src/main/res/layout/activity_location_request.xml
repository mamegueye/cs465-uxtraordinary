<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationRequest">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Entire screen container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Top Navbar -->
            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="#E84A27"> <!-- UIUC Orange -->

                <Button
                    android:id="@+id/menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜°"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_location_header"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="16dp"/>

                <Button
                    android:id="@+id/home_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_button"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>
            </RelativeLayout>

            <!-- Middle content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/location_prompt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_location_prompt"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/roboto"/>

                <!-- FIXED BUTTONS using MaterialButton -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/allow_while_using_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allow_while_using"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#202A44"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/allow_once_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allow_once"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#202A44"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dont_allow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dont_allow"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#202A44"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <!-- Bottom Navigation Bar -->
            <GridLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:columnCount="2"
                android:background="#E84A27">

                <Button
                    android:id="@+id/back_button_location_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back_button"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_columnWeight="1"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tutorialOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#80000000"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/tutorialCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tutorialTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step 2: Set your location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tutorialBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose how you want to share your location so we can recommend nearby study spaces."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnTutorialSkip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skip"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnTutorialGotIt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Got it"
                        android:textAllCaps="false"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Sliding Drawer Menu -->
    <LinearLayout
        android:id="@+id/drawerMenu"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/drawer_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:background="@color/illini_orange"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buildings_list_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Buildings List"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/illini_blue"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/report_issue_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Report an Issue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/illini_blue"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
