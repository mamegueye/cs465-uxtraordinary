<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpaceFiltering">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Code from 10/20 Lecture -->
        <!-- For the screen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Top Navbar -->
            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="#E84A27"> <!-- UIUC Orange -->

                <Button
                    android:id="@+id/menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜°"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UIUC_space_header"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="16dp"/>

                <Button
                    android:id="@+id/home_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_button"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>
            </RelativeLayout>

            <!-- Begin Filtering -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">
                <!-- Inserted Sanjit's original code -->
                <!-- Current Location Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_location_header"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"/>

                    <TextView
                        android:id="@+id/tvCurrentLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="PLACEHOLDER"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>

                <!-- Distance Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:paddingTop="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_header"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDistanceValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/placeholder_miles"
                            android:textColor="#4BA3F7"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/max_miles"
                            android:textColor="#999999"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBarDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="10"
                        android:progress="1"
                        android:progressTint="#4BA3F7"
                        android:thumbTint="#4BA3F7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/min_miles_label"
                            android:textColor="#999999"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/max_miles_label"
                            android:textColor="#999999"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#E0E0E0" />

                <!-- Study Space Type Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/study_space_type"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"/>

                    <CheckBox
                        android:id="@+id/checkBoxOpenNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:buttonTint="#4BA3F7"
                        android:text="@string/open_now"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#E0E0E0" />

                <!-- Facility Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/facility_label"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"/>

                    <CheckBox
                        android:id="@+id/checkBoxCafeFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:buttonTint="#4BA3F7"
                        android:text="@string/cafe_food"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto"
                        />
                </LinearLayout>

                <!-- Spacer -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <!-- Apply Button -->
                <Button
                    android:id="@+id/btnApply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#202A44"
                    android:text="@string/filter_apply_button"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:fontFamily="@font/roboto"
                    />
            </LinearLayout>

            <!-- /////////////////////////////////////// -->
            <!-- //////// Bottom Navigation Bar //////// -->
            <!-- ///////////////////////////////////////-->
            <!-- Bottom Navigation Bar -->
            <GridLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:columnCount="2"
                android:background="#E84A27">

                <Button
                    android:id="@+id/back_button_filtering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back_button"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_columnWeight="1"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tutorialOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#80000000"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/tutorialCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tutorialTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step 3: Set your preferences"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:id="@+id/tutorialBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use distance, Open now, and Cafe/Food to narrow down the study spaces that fit what you want."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnTutorialSkip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skip"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif"/>

                    <Button
                        android:id="@+id/btnTutorialGotIt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Got it"
                        android:textAllCaps="false"
                        android:layout_marginStart="8dp"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Menu (sliding Drawer) -->
    <LinearLayout
        android:id="@+id/drawerMenu"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/drawer_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:background="@color/illini_orange"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buildings_list_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Buildings List"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/illini_blue"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/report_issue_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Report an Issue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/illini_blue"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
