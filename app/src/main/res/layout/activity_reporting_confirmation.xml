<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportingConfirmation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ////////////////////////////////////// -->
        <!-- ///////// Top Navigation Bar /////////-->
        <!-- ////////////////////////////////////// -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E84A27"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <Button
                    android:id="@+id/menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@android:color/transparent"
                    android:text="@string/menu_button"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/header_report_confirmation"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:id="@+id/home_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@android:color/transparent"
                    android:text="@string/home_button"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>
            </RelativeLayout>

            <!-- ////////////////////////////////////// -->
            <!-- /////////// Report Filters ///////////-->
            <!-- ////////////////////////////////////// -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Prompt user to confirm details -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please confirm the details below:"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="24dp"/>

                <!-- Choose the building to report -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reporting_building"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:id="@+id/confirmation_building"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Building will appear here)"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"/>

                <!-- Choose the floor to report -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reporting_floor"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:id="@+id/confirmation_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Floor will appear here)"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"/>


                <!-- Enter your report comments; 10/22 Lecture -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_comment_prompt"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:id="@+id/confirmation_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Comment will appear here)"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>

            <!-- /////////////////////////////////////// -->
            <!-- //////// Bottom Navigation Bar //////// -->
            <!-- ///////////////////////////////////////-->
            <GridLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:columnCount="2"
                android:background="#E84A27">

                <Button
                    android:id="@+id/back_button_report_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back_button"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_columnWeight="1"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:id="@+id/next_button_report_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_button"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_columnWeight="1"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>
            </GridLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menu (sliding Drawer) -->
    <LinearLayout
        android:id="@+id/drawerMenu"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/drawer_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:background="@color/illini_orange"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buildings_list_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Buildings List"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/illini_blue"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/report_issue_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Report an Issue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/illini_blue"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>