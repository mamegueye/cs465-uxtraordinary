        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunctionalPrototype">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- /////////////////////// -->
        <!-- Hannah's Reporting View -->
        <!-- /////////////////////// -->
        <activity
            android:name=".ReportFeature"
            android:exported="true">
        </activity>
        <activity
            android:name=".ReportingFilter"
            android:exported="true">
        </activity>
        <activity
            android:name=".ReportingConfirmation"
            android:exported="true">
        </activity>
        <activity
            android:name=".ReportComplete"
            android:exported="true">
        </activity>
        <!-- /////////////////////// -->
        <!-- /////////////////////// -->

        <!-- Stella's Menu Page -->
        <activity
            android:name=".Menu"
            android:exported="true" />

        <!-- Stella's Help Page -->
        <activity
            android:name=".Help"
            android:exported="true">
        </activity>

        <!-- Shriya's Tester Building List -->
        <activity
            android:name=".BuildingList"
            android:exported="true">
        </activity>

        <activity
            android:name=".BuildingDetail"
            android:exported="true">
        </activity>

        <!-- Sanjit's Filter Page -->

        <activity
            android:name=".FilterActivity"
            android:exported="false"
            android:label="Filter Study Spaces"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Ashley's Results Page -->
        <activity
            android:name=".Results"
            android:exported="false"
            android:label="Study Spaces"
            android:theme="@style/Theme.AppCompat.Light" />

    </application>

</manifest>